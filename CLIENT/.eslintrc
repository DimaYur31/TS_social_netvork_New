{
	"extends": [
		"react-app",
		"react-app/jest"
	],
	"rules": {
		"no-unused-vars": "warn",
		"no-console": "warn",
		"prefer-const": "error",
		"semi": [
			"warn",
			// "always"
			"never"
		],
		// "indent": [
		// 	"warn",
		// 	3
		// ],
		"max-len": [
			"warn",
			{
				"code": 120
			}
		],
		"react-hooks/exhaustive-deps": "off",
		"quotes": [
			"warn",
			"single"
		],
		"jsx-quotes": [
			"warn",
			"prefer-single"
		],
		"import/order": [
			"warn",
			{
				"groups": [
					"builtin",
					"external",
					"internal",
					"parent",
					"sibling",
					"index",
					"object",
					"type"
				],
				"newlines-between": "always-and-inside-groups"
			}
		]
	}
}